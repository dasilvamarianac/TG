<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.naoki.SignOn.MenuActivity"
    android:id="@+id/popup">

    <ImageView
        android:layout_width="305dp"
        android:layout_height="340dp"
        android:id="@+id/menuImg"
        android:background="@drawable/menuopaco"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conectarBtn"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/menuImg"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sinaisBtn"
        android:layout_below="@+id/conectarBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/menuImg"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/asenhaBtn"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/sinaisBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/menuImg"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoutBtn"
        android:layout_below="@+id/asenhaBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_alignStart="@+id/menuImg"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/voltarBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/sobreBtn"
        android:background="@drawable/logo64"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />
</RelativeLayout>
